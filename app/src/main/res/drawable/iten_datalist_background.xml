<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影图层 -->
    <item>
        <shape>
            <solid android:color="#33000000" /> <!-- 阴影颜色 -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 原始形状图层 -->
    <item
        android:left="2dp"
